    // [vim]
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["j"], "after": ["g", "j"] },
        { "before": ["k"], "after": ["g", "k"] },
        { "before": [";"], "after": ["5", "g", "j"] },
        { "before": [","], "after": ["5", "g", "k"] },
        { "before": ["d"], "after": ["\"", "_", "d"] },
        { "before": ["D"], "after": ["\"", "_", "D"] },
        { "before": ["c"], "after": ["\"", "_", "c"] },
        { "before": ["C"], "after": ["\"", "_", "C"] },
        { "before": ["x"], "after": ["\"", "_", "x"] },
        { "before": ["g", "p"], "after": ["`", "[", "v", "`", "]"] },
        { "before": ["J"], "after": [":", "m", "+", "<Enter>"] },
        { "before": ["K"], "after": [":", "m", "-", "2", "<Enter>"] },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["j"], "after": ["g", "j"] },
        { "before": ["k"], "after": ["g", "k"] },
        { "before": [";"], "after": ["5", "g", "j"] },
        { "before": [","], "after": ["5", "g", "k"] },
        { "before": ["d"], "after": ["\"", "_", "d"] },
        { "before": ["c"], "after": ["\"", "_", "c"] },
        { "before": ["<"], "after": ["<", "g", "v"] },
        { "before": [">"], "after": [">", "g", "v"] },
        // [still bugs]
        { "before": ["J"], "after": [":", "m", "'", ">", "+", "<Enter>", "g", "v"] },
        { "before": ["K"], "after": [":", "m", "'", "<", "-", "2", "<Enter>", "g", "v"] },
    ],
    "vim.insertModeKeyBindings": [
        { "before": [" "], "after": [" ", "<C-g>", "u"] },
        { "before": ["<Tab>"], "after": ["<Tab>", "<C-g>", "u"] },
        { "before": ["<Enter>"], "after": ["<Enter>", "<C-g>", "u"] },
    ],
    "vim.handleKeys": {
        "<C-b>": false,
        "<C-c>": false,
        "<C-f>": false,
        "<C-h>": false,
        "<C-k>": false,
        "<C-p>": false
    },
